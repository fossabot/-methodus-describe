    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Program",
            "program": "${workspaceFolder}\\index.js",
            "outFiles": [
                "${workspaceFolder}/**/*.js"
            ]
        },
        {
            "type": "node",
            "request": "launch",
            "name": "U | build client contracts",
            "program": "${workspaceRoot}/node_modules/@methodus/contracts/build/client.js",
            "args": [
                "./build.json"
            ],
            "cwd": "${workspaceRoot}/",
            "console": "internalConsole",
            "sourceMaps": true,
            "env": {
                "DEBUG": "none",
                "NODE_ENV": "debug"
            }
        }
    ]
}